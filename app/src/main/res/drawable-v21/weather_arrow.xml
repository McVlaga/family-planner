<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/expanded"
        android:drawable="@drawable/weather_arrow_vd_expanded"
        android:state_checked="true"/>

    <item
        android:id="@+id/collapsed"
        android:drawable="@drawable/weather_arrow_vd_collapsed"/>

    <transition
        android:drawable="@drawable/weather_arrow_avd_to_expanded"
        android:fromId="@id/collapsed"
        android:toId="@id/expanded"/>

    <transition
        android:drawable="@drawable/weather_arrow_avd_to_collapsed"
        android:fromId="@id/expanded"
        android:toId="@id/collapsed"/>

</animated-selector>